                #include<iostream>
               using namespace std;
               class unary
               {
	    public:
	    int x,y,z;
	   void get(){
		x=5;
		y=-10;
		z=-44;
	         }
	        void show()
                   {
		cout<<"x = "<<x<<endl;
		cout<<"y = "<<y<<endl;
		cout<<"z = "<<z;
	          }
	     void operator -()
                  {
		x=-x;





		y=-y;
		z=-z;
                    }
                 };
                 int main(){
	     unary u;
	      u.get();
	     -u;// u.operator -()
	       u.show();
	       return 0;
                 }
