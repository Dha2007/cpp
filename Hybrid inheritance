                     #include<iostream>
                        using namespace std;
                        class student{
	            protected:
		int rollno;
		string name;
		public:
			void getst(){
				cout<<"Enter rollno , name ";
				cin>>rollno>>name;
			}
			void displayst(){
				cout<<"Rollno : "<<rollno<<" , Name:"<<name<<endl;
			}
                        };
                    class marks: public student{
	        protected:
		int sub1,sub2,sub3;
		public:
			void getmarks(){
				cout<<"Enter marks in 3 subjects : ";
				cin>>sub1>>sub2>>sub3;
			}
			int totalmarks(){
				return sub1+sub2+sub3;
			}
                                    };
                     class project{
	         protected:
		int projectmarks;
		public:
			void getprojectmarks(){
				cout<<"Enter project marks:";
				cin>>projectmarks;
			}
                       };
                     class percentage:public marks,public project{
		public:
			void calculateperc(){
				int total=totalmarks()+projectmarks;
				float percent=(total/4.0);
				displayst();
				cout<<"Total marks:"<<total<<endl;
				cout<<"percentage:"<<percent<<"%";
			}
                           };
                     int main(){
	       percentage p;
                     p.getst();
	       p.getmarks();
	         p.getprojectmarks();
	        p.calculateperc();
	         return 0;
                        } 
